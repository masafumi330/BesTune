<div class="table-responsive container-sm">
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th class="col-xs-1"></th>
                <th class="col-xs-11"></th>
            </tr>
        </thead>
        <tbody>
            <% songList.forEach((song, i)=> { %>
                <tr>
                    <td class="text-center" style="padding: 0.5rem;">
                        <%= i + 1 %>
                    </td>
                    <td>
                        <div class=" d-flex align-items-center">
                            <img src="<%= song.album.images[2].url %> " alt="" style="width: 4.5vm; height: 4.5vm"
                                class="rounded" />
                            <div class="ms-3">
                                <p class="fw-bold mb-1">
                                    <%= song.name %>
                                </p>
                                <p class="fw-normal mb-1">
                                    <%= song.artists[0].name %>
                                </p>
                            </div>
                        </div>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>